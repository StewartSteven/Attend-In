<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Class_View">

    <TextView
        android:id="@+id/Student_Class_Title"
        android:layout_width="164dp"
        android:layout_height="46dp"
        android:text="Class List"
        android:textColor="#1939C9"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/Student_Class_Select_Title"
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:text="Select Class to attend"
        android:textColor="#1939C9"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Student_Class_Title"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/st_Class_1_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1939C9"
        android:text="CSC 1101"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Student_Class_Select_Title"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/st_Class_2_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1939C9"
        android:text="CSC 1102"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st_Class_1_Btn"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/st_Class_3_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1939C9"
        android:text="CSC 1103"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st_Class_2_Btn"
        app:layout_constraintVertical_bias="0.051" />

</androidx.constraintlayout.widget.ConstraintLayout>